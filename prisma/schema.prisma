enum Role {
  USER
  EDITOR
  ADMIN
}

model User {
  id          String   @id @unique @default(uuid()) @map("id")
  email       String   @unique
  handlerName String   @map("handler_name")
  password    String
  firstName   String
  lastName    String
  role        Role     @default(USER)
  createAt    DateTime @default(now()) @ignore
  updateAt    DateTime @updatedAt @ignore
  Review      Review[]

  @@index([email])
  @@map("users")
}

